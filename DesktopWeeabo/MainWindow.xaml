        <Grid Margin="10,87,0,10" Background="#FF931515" Width="110" HorizontalAlignment="Left">
            <Button Name="Search" Content="SEARCH" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Background="White" BorderBrush="{x:Null}" Command="{Binding SearchCommand}" Click="SelectedButton"/>
            <Button Name="ToWatch" Content="TO WATCH" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="90" Background="White" BorderBrush="{x:Null}" Command="{Binding ToWatchCommand}" Click="SelectedButton"/>
            <Button Name="Watched" Content="WATCHED" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="90" Background="White" BorderBrush="{x:Null}" Command="{Binding WatchedCommand}" Click="SelectedButton"/>
            <Button Name="Watching" Content="WATCHING" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Width="90" Background="White" BorderBrush="{x:Null}" Command="{Binding WatchingCommand}" Click="SelectedButton"/>
            <Button Name="Dropped" Content="DROPPED" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Width="90" Background="White" BorderBrush="{x:Null}" Command="{Binding DroppedCommand}" Click="SelectedButton"/>
        </Grid>
        <ContentControl x:Name="Pages" Content="{Binding SelectedViewModel}" Margin="125,10,10,10"/>
    </Grid>
    
