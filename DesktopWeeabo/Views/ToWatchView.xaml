<UserControl x:Class="DesktopWeeabo.Views.ToWatchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopWeeabo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Style="{StaticResource ChangableTextBlock}" HorizontalAlignment="Left" Margin="0,3,0,0" TextWrapping="Wrap" Text="Search to watch animes:" VerticalAlignment="Top"/>
        <TextBox Height="23" TextChanged="Search_TextChanged" TextWrapping="Wrap" VerticalAlignment="Top" Margin="131,0,0,0"/>
        <ListBox Style="{StaticResource ChangableListBox}" Name="listBox" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Stretch" Margin="0,52,0,0" HorizontalContentAlignment="Stretch"/>
        <TextBlock Style="{StaticResource ChangableTextBlock}" HorizontalAlignment="Left" Margin="0,28,0,0" TextWrapping="Wrap" Text="Sort by: " VerticalAlignment="Top" TextAlignment="Center" Height="23"/>
        <ComboBox Name="orderByComboBox" HorizontalAlignment="Left" Margin="49,28,0,0" VerticalAlignment="Top" Width="98" SelectionChanged="SortByComboBox_SelectionChanged">
            <ComboBoxItem Content="Title" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="English" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="Synonyms" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="Episodes" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="Score" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="Type" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="Status" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="Start date" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="End date" HorizontalAlignment="Left" Width="98"/>
            <ComboBoxItem Content="Watch priority" HorizontalAlignment="Left" Width="98"/>
        </ComboBox>
        <CheckBox Style="{StaticResource ChangableCheckBox}" Name="descendingOrderByCheckBox" Content="Descending" HorizontalAlignment="Left" Margin="152,30,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft" Checked="CheckBoxChanged" Unchecked="CheckBoxChanged" RenderTransformOrigin="0.494,0.562"/>
    </Grid>
</UserControl>
